{
    "title": "Cheapest Plane Tickets Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "mainDepartureCity": {
            "title": "Main Departure City Code (MDC)",
            "type": "string",
            "description": "IATA airport code (3 letters, e.g., TPE for Taipei)",
            "editor": "textfield",
            "default": "TPE",
            "pattern": "^[A-Z]{3}$",
            "minLength": 3,
            "maxLength": 3
        },
        "targetCity": {
            "title": "Target City Code (TC)",
            "type": "string",
            "description": "IATA airport code (3 letters, e.g., PRG for Prague)",
            "editor": "textfield",
            "default": "PRG",
            "pattern": "^[A-Z]{3}$",
            "minLength": 3,
            "maxLength": 3
        },
        "alternativeDepartureCities": {
            "title": "Alternative Departure Cities (Intermediate Stops)",
            "type": "array",
            "description": "List of IATA airport codes to check as intermediate stops for cheaper routes",
            "editor": "stringList",
            "default": ["HKG"],
            "prefill": ["HKG"],
            "placeholderValue": "3-letter code (e.g., HKG)",
            "items": {
                "type": "string",
                "pattern": "^[A-Z]{3}$"
            },
            "uniqueItems": true
        },
        "cabinClass": {
            "title": "Cabin Class",
            "type": "string",
            "description": "Flight cabin class",
            "editor": "select",
            "enum": ["Y", "C", "F"],
            "enumTitles": ["Economic", "Business", "First"],
            "default": "Y"
        },
        "numberOfPeople": {
            "title": "Number of Passengers",
            "type": "integer",
            "description": "Total number of passengers",
            "minimum": 1,
            "maximum": 9,
            "default": 1
        },
        "timePeriods": {
            "title": "Travel Time Periods",
            "type": "array",
            "description": "Dates for travel. Each period defines outbound and inbound dates.",
            "editor": "schemaBased",
            "items": {
                "type": "object",
                "properties": {
                    "outboundDate": {
                        "title": "Outbound Date",
                        "type": "string",
                        "description": "Date for outbound flight search (YYYY-MM-DD)",
                        "editor": "datepicker",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                    },
                    "inboundDate": {
                        "title": "Inbound Date",
                        "type": "string",
                        "description": "Date for outbound flight search (YYYY-MM-DD)",
                        "editor": "datepicker",
                        "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
                    }
                },
                "required": ["outboundDate", "inboundDate"]
            },
            "prefill": [
                {
                    "outboundDate": "2026-10-06",
                    "inboundDate": "2026-10-14"
                }
            ]
        },
        "airlines": {
            "title": "Filter by Airlines (Optional)",
            "type": "array",
            "description": "Restrict search to specific airlines. Leave empty for all airlines. Applies to ALL flight legs.",
            "editor": "stringList",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "maxFlightsPerSearch": {
            "title": "Max Flights per Search",
            "type": "integer",
            "description": "Maximum number of flight options to collect from each search. Higher values provide more options but increase runtime.",
            "minimum": 1,
            "maximum": 1000,
            "default": 100
        }
    },
    "required": ["mainDepartureCity", "targetCity", "cabinClass", "numberOfPeople", "timePeriods"]
}
