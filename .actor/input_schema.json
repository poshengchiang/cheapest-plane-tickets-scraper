{
    "title": "Cheapest Plane Tickets Scraper Input",
    "type": "object",
    "schemaVersion": 1,
    "properties": {
        "mainDepartureCity": {
            "title": "Main Departure City (MDC)",
            "type": "string",
            "description": "Primary departure city/airport code",
            "editor": "select",
            "enum": ["TPE", "PRG", "TYO"],
            "enumTitles": ["Taipei (TPE)", "Prague (PRG)", "Tokyo (TYO)"],
            "default": "TPE"
        },
        "targetCity": {
            "title": "Target City (TC)",
            "type": "string",
            "description": "Primary departure city/airport code",
            "editor": "select",
            "enum": ["TPE", "PRG", "TYO"],
            "enumTitles": ["Taipei (TPE)", "Prague (PRG)", "Tokyo (TYO)"],
            "default": "PRG"
        },
        "alternativeDepartureCities": {
            "title": "Alternative Departure Cities (ADC)",
            "type": "array",
            "description": "Intermediate cities to check for cheaper routes via multi-leg flights",
            "editor": "select",
            "items": {
                "type": "string",
                "enum": ["HKG", "ICN", "SIN", "BKK", "KUL", "MNL"],
                "enumTitles": [
                    "Hong Kong (HKG)",
                    "Seoul (ICN)",
                    "Singapore (SIN)",
                    "Bangkok (BKK)",
                    "Kuala Lumpur (KUL)",
                    "Manila (MNL)"
                ]
            },
            "uniqueItems": true,
            "default": [],
            "prefill": ["HKG", "ICN"]
        },
        "class": {
            "title": "Cabin Class",
            "type": "string",
            "description": "Flight cabin class",
            "editor": "select",
            "enum": ["Y", "C", "F"],
            "enumTitles": ["Economic", "Business", "First"],
            "default": "Y"
        },
        "numberOfPeople": {
            "title": "Number of Passengers",
            "type": "integer",
            "description": "Total number of passengers",
            "minimum": 1,
            "maximum": 9,
            "default": 1
        },
        "timePeriods": {
            "title": "Travel Time Periods",
            "type": "array",
            "description": "Date ranges for travel. Each period defines outbound and inbound date ranges.",
            "editor": "json",
            "items": {
                "type": "object",
                "properties": {
                    "outboundDateStart": {
                        "title": "Outbound Start Date",
                        "type": "string",
                        "description": "Start date for outbound flight search (YYYY-MM-DD)",
                        "editor": "textfield"
                    },
                    "outboundDateEnd": {
                        "title": "Outbound End Date",
                        "type": "string",
                        "description": "End date for outbound flight search (YYYY-MM-DD)",
                        "editor": "textfield"
                    },
                    "inboundDateStart": {
                        "title": "Inbound Start Date",
                        "type": "string",
                        "description": "Start date for inbound flight search (YYYY-MM-DD)",
                        "editor": "textfield"
                    },
                    "inboundDateEnd": {
                        "title": "Inbound End Date",
                        "type": "string",
                        "description": "End date for inbound flight search (YYYY-MM-DD)",
                        "editor": "textfield"
                    }
                },
                "required": ["outboundDateStart", "outboundDateEnd", "inboundDateStart", "inboundDateEnd"]
            },
            "prefill": [
                {
                    "outboundDateStart": "2025-12-10",
                    "outboundDateEnd": "2025-12-12",
                    "inboundDateStart": "2025-12-17",
                    "inboundDateEnd": "2025-12-19"
                }
            ]
        },
        "airlines": {
            "title": "Filter by Airlines (Optional)",
            "type": "array",
            "description": "Restrict search to specific airlines. Leave empty for all airlines. Applies to ALL flight legs.",
            "editor": "stringList",
            "items": {
                "type": "string"
            },
            "default": []
        },
        "targetLowestPrice": {
            "title": "Sort by Lowest Price",
            "type": "boolean",
            "description": "Whether to sort results by price (lowest first)",
            "default": true
        },
        "transferTimeHours": {
            "title": "Minimum Transfer Time (Hours)",
            "type": "integer",
            "description": "Minimum hours required between connecting flights for alternative routes",
            "minimum": 1,
            "maximum": 48,
            "default": 3
        },
        "adcBufferHours": {
            "title": "ADC Search Buffer (Hours)",
            "type": "integer",
            "description": "Hours buffer for ADC↔TC leg searches (search ±N hours from MDC arrival/departure)",
            "minimum": 12,
            "maximum": 72,
            "default": 24
        },
        "maxRequestsPerCrawl": {
            "title": "Max Requests per Crawl",
            "type": "integer",
            "description": "Limit total number of requests to prevent excessive API calls",
            "minimum": 1,
            "maximum": 10000,
            "default": 1000
        }
    },
    "required": ["mainDepartureCity", "targetCity", "class", "numberOfPeople", "timePeriods"]
}
